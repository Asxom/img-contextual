{
  "name": "img-contextual",
  "displayName": "Image To Base64 clipboard",
  "description": "Adds to contextual menu encode to base 64 and set into the clipboard",
  "publisher": "green-csv",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:img-contextual.encodeToB64"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "img-contextual.encodeToB64",
        "title": "Encode: to base 64",
        "category": "Encode"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "img-contextual.encodeToB64",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == encodingImgTargetFile && !listMultiSelection",
          "command": "img-contextual.encodeToB64"
        }
      ]
    },
    "languages": [
      {
        "id": "encodingImgTargetFile",
        "extensions": [
          ".png",
          ".jpg",
          ".jpeg",
          ".gif",
          ".webp",
          ".ico"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "file-type": "14.6.1"
  }
}
